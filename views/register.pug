extends layout
block content

        header.reg-header.text-center
            //- logo
            img(src="/assets/logo.png", alt="energia logo")

            //- caption
            p.header-caption 
                | Please fill in some information and make sure to fill all fields with 
                span.red * 
                | sign.
        .container
            //- form card
            section.form-card
                form#regForm
                    h1.text-center Register
                    // One "tab" for each step in the form:
                    section.form-fields
                        //- name
                        .half
                            label(for="fname") First Name 
                                span.red * 
                            input#fname(type="text" name="fname", placeholder="e.g: Mohamed")
                        .half
                            label(for="lname") Last Name
                                span.red * 
                            input#lname(type="text" name="lname", placeholder="e.g: Saad")

                        //- email
                        label(for="email") Your Email Address
                            span.red * 
                        input#name(type="text" name="email", placeholder="e.g: example@example.com")

                        //- phone
                        label(for="phone") Your Phone Number
                            span.red * 
                        input#name(type="tel" name="phone", placeholder="e.g: 01003400000")

                        //- university
                        label(for="university") University
                            span.red * 
                        input#name(type="text" name="university", placeholder="e.g: Cairo University")

                        //- college
                        label(for="college") College
                            span.red * 
                        input#name(type="text" name="college", placeholder="e.g: Engineering")
                
                        //- committee
                        label(for="committee") Choose the committee you want to join
                            span.red * 
                        select#committe(name="committee")
                            option(value="IT") IT
                            option(value="HR") HR

                        //- reason for joining
                        label(for="join-reason") Why did you choose this committee
                            span.red * 
                        textarea#join-reason(name="reason", cols="30", rows="10", placeholder="e.g: To learn")

                        //- submit
                        button(type="submit") Register